# Non-Sensitive Environment Variables
# Sensitive values are in ./secrets/ directory and loaded via Docker secrets

# ============================================
# DISCORD CONFIGURATION
# ============================================
DISCORD_CLIENT_ID=your_oauth_client_id_here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback
DISCORD_GUILD_ID=your_main_server_id_here
DEVELOPER_ROLE_ID=your_developer_role_id_here

# Secrets should be managed via Docker Secrets or similar
DISCORD_BOT_TOKEN_FILE=/run/secrets/discord_bot_token
DISCORD_CLIENT_SECRET_FILE=/run/secrets/discord_client_secret
# DISCORD_BOT_TOKEN=... (Local dev only)

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=baseline
POSTGRES_DB=baseline
# Create a secret file for DB password
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# Create a secret file for Redis password (optional)
# REDIS_PASSWORD_FILE=/run/secrets/redis_password

# ============================================
# BACKEND API CONFIGURATION
# ============================================
API_SECRET_KEY_FILE=/run/secrets/api_secret_key
API_VERSION=v1
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# HEALTH CHECK
# ============================================
HEALTH_HOST=0.0.0.0
HEALTH_PORT=8080

# ============================================
# LLM CONFIGURATION
# ============================================
# Note: All API keys are in ./secrets/ directory
LLM_DEFAULT_PROVIDER=openai
LLM_MAX_RETRIES=3
LLM_TIMEOUT_SECONDS=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_GUILD=500
RATE_LIMIT_GLOBAL=1000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_LLM_FEATURES=true
ENABLE_IMAGE_GENERATION=true
ENABLE_AUDIO_FEATURES=false

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
HOT_RELOAD=true
HOT_RELOAD=true
ENVIRONMENT=development
NEXT_TELEMETRY_DISABLED=1

# ============================================
# PRODUCTION (Optional)
# ============================================
SENTRY_DSN=
APP_NAME=discord-bot-baseline
