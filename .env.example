# Non-Sensitive Environment Variables
# Sensitive values are in ./secrets/ directory and loaded via Docker secrets

# ============================================
# DISCORD CONFIGURATION (NON-SENSITIVE)
# ============================================
DISCORD_CLIENT_ID=your_oauth_client_id_here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback
MAIN_GUILD_ID=your_main_server_id_here

# ============================================
# DATABASE CONFIGURATION (EXTERNAL)
# ============================================
# Connection string to your existing PostgreSQL database
# Format: postgresql://username:password@host:port/database
# Example: postgresql://botuser:secret@localhost:5432/botdb
# For cloud: postgresql://user:pass@my-db.cloud.com:5432/botdb
DATABASE_URL=postgresql://botuser:your_password@your_db_host:5432/botdb

# ============================================
# REDIS CONFIGURATION (EXTERNAL)
# ============================================
# Connection string to your existing Redis instance
# Format: redis://[:password@]host:port/db
# Example without password: redis://localhost:6379/0
# Example with password: redis://:mypassword@localhost:6379/0
# For cloud: redis://:pass@my-redis.cloud.com:6379/0
REDIS_URL=redis://:your_password@your_redis_host:6379/0

# ============================================
# BACKEND API CONFIGURATION
# ============================================
# Note: API_SECRET_KEY is in ./secrets/api_secret_key.txt
API_VERSION=v1
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# HEALTH CHECK
# ============================================
HEALTH_HOST=0.0.0.0
HEALTH_PORT=8080

# ============================================
# LLM CONFIGURATION
# ============================================
# Note: All API keys are in ./secrets/ directory
LLM_DEFAULT_PROVIDER=openai
LLM_MAX_RETRIES=3
LLM_TIMEOUT_SECONDS=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_GUILD=500
RATE_LIMIT_GLOBAL=1000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_LLM_FEATURES=true
ENABLE_IMAGE_GENERATION=true
ENABLE_AUDIO_FEATURES=false

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
HOT_RELOAD=true
HOT_RELOAD=true
ENVIRONMENT=development
NEXT_TELEMETRY_DISABLED=1

# ============================================
# PRODUCTION (Optional)
# ============================================
SENTRY_DSN=
APP_NAME=discord-bot-baseline
